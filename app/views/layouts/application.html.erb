<!DOCTYPE html>
<html>
  <head>
    <title>Journal</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark">
      <a class="navbar-brand" href="#">Navbar</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <%= link_to "Categories", categories_path, class: "nav-link" %>
          </li>
          <% if user_signed_in? %>
          <% user_categories = Category.where(user: current_user) %>
          <li class="nav-item dropdown" >
            <div class="nav-item btn-group">
              <%= link_to "Today", home_today_path, class: "btn btn-link text-white" %>
              <button type="button" class="btn btn-link dropdown-toggle dropdown-toggle-split text-white" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="sr-only">Toggle Dropdown</span>
              </button>
              <div class="dropdown-menu">
                <%= link_to "All", home_today_path, class: "dropdown-item" %>
                <div class="dropdown-divider"></div>
                <% user_categories.each do |c| %>
                <%= link_to c.name, today_category_path(c), class: "dropdown-item" %>
                <% end %>
              </div>
            </div>
          </li>
          <!--
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="addDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Add
            </a>
            <div class="dropdown-menu" aria-labelledby="addDropdown">
              <%= link_to "Task", new_task_path, class: "dropdown-item" %>
              <%= link_to "Event", new_event_path, class: "dropdown-item" %>
              <%= link_to "Note", new_note_path, class: "dropdown-item" %>
            </div>
          </li>
          -->
          <% end %>
        </ul>
        <!--<form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>-->
          <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><%= button_to 'My Account', edit_user_registration_path, :class => 'btn btn-sm btn-outline-dark' %></li>
            <li><%= button_to "Sign Out", destroy_user_session_path, :method => :delete, :class => 'btn btn-sm btn-outline-dark' %></li>
          <% else %>
            <li><%= button_to 'Sign In', new_user_session_path, :class => 'btn btn-sm btn-outline-dark' %></li>
            <li><%= button_to 'Sign Up', new_user_registration_path, :method => :get, :class => 'btn btn-sm btn-outline-dark' %></li>
          <% end %>
          </ul>
      </div>
    </nav>
    <div class="container">
    <%= yield %>
    <%= render partial: 'shared/menu' %>
    </div>
  </body>
</html>
